    {
      "description": "Move a window like Windows",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "right_arrow",
            "modifiers": {
              "mandatory": ["option"]
            }
          },
          "to": [
            {
              "key_code": "right_arrow",
              "modifiers": ["command", "control", "shift", "option"]
            },
            { "set_variable": { "name": "press_window_move_key", "value": 3 } }

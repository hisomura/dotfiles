{
  "title": "For hisomura",
  "rules": [
    {
      "description": "divvyでWindowsと同じような動作にする",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "right_arrow",
            "modifiers": {
              "mandatory": ["option"]
            }
          },
          "to": [
            {
              "key_code": "right_arrow",
              "modifiers": ["command", "control", "shift", "option"]
            },
            { "set_variable": { "name": "press_window_move_key", "value": 3 } }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name":  "press_window_move_key",
              "value": 0
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "right_arrow",
            "modifiers": {
              "mandatory": ["option"]
            }
          },
          "to": [
            {
              "key_code": "left_arrow",
              "modifiers": ["command", "control", "shift", "option"]
            },
            { "set_variable": { "name": "press_window_move_key", "value": 1 } }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name":  "press_window_move_key",
              "value": 3
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "right_arrow",
            "modifiers": {
              "mandatory": ["option"]
            }
          },
          "to": [
            {
              "key_code": "up_arrow",
              "modifiers": ["command", "control", "shift", "option"]
            },
            { "set_variable": { "name": "press_window_move_key", "value": 2 } }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name":  "press_window_move_key",
              "value": 1
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "right_arrow",
            "modifiers": {
              "mandatory": ["option"]
            }
          },
          "to": [
            {
              "key_code": "right_arrow",
              "modifiers": ["command", "control", "shift", "option"]
            },
            { "set_variable": { "name": "press_window_move_key", "value": 3 } }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name":  "press_window_move_key",
              "value": 2
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "left_arrow",
            "modifiers": {
              "mandatory": ["option"]
            }
          },
          "to": [
            {
              "key_code": "left_arrow",
              "modifiers": ["command", "control", "shift", "option"]
            },
            { "set_variable": { "name": "press_window_move_key", "value": 1 } }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name":  "press_window_move_key",
              "value": 0
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "left_arrow",
            "modifiers": {
              "mandatory": ["option"]
            }
          },
          "to": [
            {
              "key_code": "right_arrow",
              "modifiers": ["command", "control", "shift", "option"]
            },
            { "set_variable": { "name": "press_window_move_key", "value": 3 } }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name":  "press_window_move_key",
              "value": 1
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "left_arrow",
            "modifiers": {
              "mandatory": ["option"]
            }
          },
          "to": [
            {
              "key_code": "up_arrow",
              "modifiers": ["command", "control", "shift", "option"]
            },
            { "set_variable": { "name": "press_window_move_key", "value": 2 } }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name":  "press_window_move_key",
              "value": 3
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "left_arrow",
            "modifiers": {
              "mandatory": ["option"]
            }
          },
          "to": [
            {
              "key_code": "left_arrow",
              "modifiers": ["command", "control", "shift", "option"]
            },
            { "set_variable": { "name": "press_window_move_key", "value": 1 } }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name":  "press_window_move_key",
              "value": 2
            }
          ]
        }
      ]
    },
    {
      "description": "RectangleでWin + ←↑→ を割り当て",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_arrow",
            "modifiers": {
              "mandatory": ["option"]
            }
          },
          "to": [
            {
              "key_code": "left_arrow",
              "modifiers": ["control", "option"]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "left_arrow",
            "modifiers": {
              "mandatory": ["option"]
            }
          },
          "to": [
            {
              "key_code": "left_arrow",
              "modifiers": ["control", "option"]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "up_arrow",
            "modifiers": {
              "mandatory": ["option"]
            }
          },
          "to": [
            {
              "key_code": "up_arrow",
              "modifiers": ["control", "option"]
            }
          ]
        }
      ]
    },
    {
      "description": "Ctrl+左クリックを押すとCMD+左クリックを送る",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "pointing_button": "button1",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
          "to": [
            {
              "pointing_button": "button1",
              "modifiers": {
                "mandatory": ["left_command"]
              }
            }
          ]
        }
      ]
    },
    {
      "description": "Ctrl+'を押したときにかな入力と英数入力をトグルする",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "quote",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
          "to": [{ "key_code": "japanese_eisuu" }],
          "conditions": [
            {
              "type": "input_source_if",
              "input_sources": [{ "language": "ja" }]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "quote",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
          "to": [{ "key_code": "japanese_kana" }],
          "conditions": [
            {
              "type": "input_source_unless",
              "input_sources": [{ "language": "ja" }]
            }
          ]
        }
      ]
    },
    {
      "description": "左Commandを二回押すとcommand+control+shift+option+vキーを送る",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "left_command" },
          "to": [
            {
              "key_code": "v",
              "modifiers": ["command", "control", "shift", "option"]
            },
            { "set_variable": { "name": "press_left_command_key", "value": 0 } }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "press_left_command_key",
              "value": 1
            }
          ]
        },
        {
          "type": "basic",
          "from": { "key_code": "left_command" },
          "to": [
            {
              "set_variable": { "name": "press_left_command_key", "value": 1 }
            },
            { "key_code": "left_command" }
          ],
          "to_delayed_action": {
            "to_if_invoked": [
              {
                "set_variable": { "name": "press_left_command_key", "value": 0 }
              }
            ],
            "to_if_canceled": [
              {
                "set_variable": { "name": "press_left_command_key", "value": 0 }
              }
            ]
          },
          "conditions": [
            {
              "type": "variable_if",
              "name": "press_left_command_key",
              "value": 0
            }
          ]
        }
      ]
    },
    {
      "description": "Ctrl+Insertでコピー",
      "manipulators": [
        {
          "from": {
            "key_code": "insert",
            "modifiers": {
              "mandatory": ["control"],
              "optional": ["any"]
            }
          },
          "to": [{ "key_code": "c", "modifiers": ["left_command"] }],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Shift+Insertで貼り付け",
      "manipulators": [
        {
          "from": {
            "key_code": "insert",
            "modifiers": {
              "mandatory": ["shift"],
              "optional": ["any"]
            }
          },
          "to": [{ "key_code": "v", "modifiers": ["left_command"] }],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Ctrl+C, Ctrl+V, Ctrl+X => Cmd+C (Copy), Cmd+V (Paste), Cmd+X (Cut)",

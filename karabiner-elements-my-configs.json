{
  "title": "For hisomura",
  "rules": [
    {
      "description": "Right-Option+L to Lock Screen",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "l",
            "modifiers": {
              "mandatory": ["right_option"]
            }
          },
          "to": [
            {
              "key_code": "q",
              "modifiers": ["left_control", "left_command"]
            }
          ]
        }
      ]
    },
    {
      "description": "Ctrl+[ => Ctrl+[ + japanese_eisuu",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "open_bracket",
            "modifiers": { "mandatory": ["control"] }
          },
          "to": [
            { "key_code": "open_bracket", "modifiers": ["control"] },
            { "key_code": "japanese_eisuu" }
          ],
          "conditions": [
            { "type": "keyboard_type_if", "keyboard_types": ["ansi", "iso"] }
          ]
        },
        {
          "type": "basic",
          "from": { "key_code": "close_bracket", "modifiers": { "mandatory": ["control"] } },
          "to": [
            { "key_code": "close_bracket", "modifiers": ["control"] },
            { "key_code": "japanese_eisuu" }
          ],
          "conditions": [{ "type": "keyboard_type_if", "keyboard_types": ["jis"] }]
        }
      ]
    },
    {
      "description": "Ctrl+' => toggle input source",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "quote",
            "modifiers": {
              "mandatory": ["left_control"]
            }
          },
          "to": [{ "key_code": "japanese_eisuu" }],
          "conditions": [
            {
              "type": "input_source_if",
              "input_sources": [{ "language": "ja" }]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "quote",
            "modifiers": {
              "mandatory": ["left_control"]
            }
          },
          "to": [{ "key_code": "japanese_kana" }],
          "conditions": [
            {
              "type": "input_source_unless",
              "input_sources": [{ "language": "ja" }]
            }
          ]
        }
      ]
    },
    {
      "description": "Double type left command => Cmd+Shift+Option+V",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "left_command" },
          "to": [
            {
              "key_code": "v",
              "modifiers": ["command", "shift", "option"]
            },
            { "set_variable": { "name": "press_left_command_key", "value": 0 } }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "press_left_command_key",
              "value": 1
            }
          ]
        },
        {
          "type": "basic",
          "from": { "key_code": "left_command" },
          "to": [
            {
              "set_variable": { "name": "press_left_command_key", "value": 1 }
            },
            { "key_code": "left_command" }
          ],
          "to_delayed_action": {
            "to_if_invoked": [
              {
                "set_variable": { "name": "press_left_command_key", "value": 0 }
              }
            ],
            "to_if_canceled": [
              {
                "set_variable": { "name": "press_left_command_key", "value": 0 }
              }
            ]
          },
          "conditions": [
            {
              "type": "variable_if",
              "name": "press_left_command_key",
              "value": 0
            }
          ]
        }
      ]
    },
    {
      "description": "Ctrl+Insert => Cmd+C(Copy)",
      "manipulators": [
        {
          "from": {
            "key_code": "insert",
            "modifiers": {
              "mandatory": ["left_control"],
              "optional": ["any"]
            }
          },
          "to": [{ "key_code": "c", "modifiers": ["left_command"] }],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Shift+Insert => Cmd+V(Paste)",
      "manipulators": [
        {
          "from": {
            "key_code": "insert",
            "modifiers": {
              "mandatory": ["shift"],
              "optional": ["any"]
            }
          },
          "to": [{ "key_code": "v", "modifiers": ["left_command"] }],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Ctrl+Shift+Backslash => Cmd+v(Paste)",
      "manipulators": [
        {
          "from": {
            "key_code": "",
            "modifiers": {
              "mandatory": ["left_control", "left_shift"],
              "optional": ["any"]
            }
          },
          "to": [{ "key_code": "v", "modifiers": ["left_command"] }],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Ctrl+N => Down, Ctrl+P => Up",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "n",
            "modifiers": {
              "mandatory": ["left_control"],
              "optional": ["any"]
            }
          },
          "to": [{ "key_code": "down_arrow" }],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.google\\.Chrome$",
                "^com\\.tinyspeck\\.slackmacgap"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "p",
            "modifiers": {
              "mandatory": ["left_control"],
              "optional": ["any"]
            }
          },
          "to": [{ "key_code": "up_arrow" }],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.google\\.Chrome$",
                "^com\\.tinyspeck\\.slackmacgap"
              ]
            }
          ]
        }
      ]
    },
